<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/scrollView"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:nestedScrollingEnabled="true"
            android:background="@color/colorPrimaryLight"
            xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorBackground"
                android:orientation="vertical"
                tools:context="com.silho.ideo.meetus.MainActivity">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="8dp">

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/restaurantTypeFAB"
                        style="@style/TypeFABTheme"
                        app:backgroundTint="@color/colorPrimary"
                        app:elevation="2dp"
                        app:fabSize="normal"
                        app:rippleColor="@color/colorSecondary"
                        app:srcCompat="@drawable/ic_restaurant_black_24dp"/>

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/visitTypeFAB"
                        style="@style/TypeFABTheme"
                        app:backgroundTint="@color/colorPrimary"
                        app:elevation="2dp"
                        app:fabSize="normal"
                        app:rippleColor="@color/colorSecondary"
                        app:srcCompat="@drawable/ic_account_balance_black_24dp"/>

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/coffeeTypeFAB"
                        style="@style/TypeFABTheme"
                        app:backgroundTint="@color/colorPrimary"
                        app:elevation="2dp"
                        app:fabSize="normal"
                        app:rippleColor="@color/colorSecondary"
                        app:srcCompat="@drawable/ic_free_breakfast_black_24dp"/>

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/searchPlacesFAB"
                        style="@style/TypeFABTheme"
                        app:backgroundTint="@color/colorPrimary"
                        app:elevation="2dp"
                        app:fabSize="normal"
                        app:rippleColor="@color/colorSecondary"
                        app:srcCompat="@drawable/ic_location_searching_black_24dp"
                        />

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/addressTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:fontFamily="sans-serif-smallcaps"
                        android:padding="8dp"
                        android:textColor="#000000"
                        android:textSize="12sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0.25dp"
                        android:background="@color/colorAccent"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerViewItemNearby"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"/>
                </FrameLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorBackground"
                android:orientation="vertical"
                tools:context="com.silho.ideo.meetus.MainActivity">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="8dp">

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/bikingFAB"
                        style="@style/TypeFABTheme"
                        app:backgroundTint="@color/colorPrimary"
                        app:elevation="2dp"
                        app:fabSize="normal"
                        app:rippleColor="@color/colorSecondary"
                        app:srcCompat="@drawable/ic_directions_bike_black_24dp"/>

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/transportFAB"
                        style="@style/TypeFABTheme"
                        app:backgroundTint="@color/colorPrimary"
                        app:elevation="2dp"
                        app:fabSize="normal"
                        app:rippleColor="@color/colorSecondary"
                        app:srcCompat="@drawable/ic_directions_bus_black_24dp"/>

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/drivingFAB"
                        style="@style/TypeFABTheme"
                        app:backgroundTint="@color/colorPrimary"
                        app:elevation="2dp"
                        app:fabSize="normal"
                        app:rippleColor="@color/colorSecondary"
                        app:srcCompat="@drawable/ic_directions_car_black_24dp"/>

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/walkingFAB"
                        style="@style/TypeFABTheme"
                        app:backgroundTint="@color/colorPrimary"
                        app:elevation="2dp"
                        app:fabSize="normal"
                        app:rippleColor="@color/colorSecondary"
                        app:srcCompat="@drawable/ic_directions_walk_black_24dp"
                        />

                </LinearLayout>

                    <TextView
                        android:id="@+id/durationTextView"
                        android:layout_width="match_parent"
                        android:fontFamily="sans-serif-smallcaps"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:gravity="center"
                        android:text="--"
                        android:textColor="#000000"
                        android:textSize="14sp"/>

                <fragment
                    android:id="@+id/map"
                    class="com.silho.ideo.meetus.utils.WorkaroundMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <RelativeLayout
                android:id="@+id/rlfrag"
                class="com.silho.ideo.meetus.fragments.FriendsFragment"
                android:layout_width="match_parent"
                android:layout_height="360dp"/>

        </FrameLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colorPrimaryLight"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/scheduleButton"
                    style="@style/TypeFABTheme"
                    app:backgroundTint="@color/colorPrimary"
                    app:elevation="2dp"
                    app:fabSize="normal"
                    app:rippleColor="@color/colorSecondary"
                    app:srcCompat="@drawable/ic_event_black_24dp"/>
            </LinearLayout>

    </LinearLayout>

</ScrollView>