<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorSecondary"
    xmlns:android="http://schemas.android.com/apk/res/android">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    android:layout_height="match_parent">

<LinearLayout
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">


        <fragment
            android:id="@+id/map"
            class="com.google.android.gms.maps.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/bikingFAB"
                style="@style/TypeFABThemeInvitationResumer"
                app:backgroundTint="@color/colorPrimary"
                app:elevation="2dp"
                app:fabSize="mini"
                app:rippleColor="@color/colorSecondary"
                app:srcCompat="@drawable/ic_directions_bike_black_24dp"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/transportFAB"
                style="@style/TypeFABThemeInvitationResumer"
                app:backgroundTint="@color/colorPrimary"
                app:elevation="2dp"
                app:fabSize="mini"
                app:rippleColor="@color/colorSecondary"
                app:srcCompat="@drawable/ic_directions_bus_black_24dp"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/drivingFAB"
                style="@style/TypeFABThemeInvitationResumer"
                app:backgroundTint="@color/colorPrimary"
                app:elevation="2dp"
                app:fabSize="mini"
                app:rippleColor="@color/colorSecondary"
                app:srcCompat="@drawable/ic_directions_car_black_24dp"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/walkingFAB"
                style="@style/TypeFABThemeInvitationResumer"
                app:backgroundTint="@color/colorPrimary"
                app:elevation="2dp"
                app:fabSize="mini"
                app:rippleColor="@color/colorSecondary"
                app:srcCompat="@drawable/ic_directions_walk_black_24dp"
                />

        </LinearLayout>


    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/durationTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Duration"
            android:textColor="#000000"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/distanceTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Distance"
            android:textColor="#000000"
            android:textSize="14sp"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewInvitation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"/>



</LinearLayout>
</android.support.v7.widget.CardView>
</RelativeLayout>

